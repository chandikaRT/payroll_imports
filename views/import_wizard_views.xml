<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_import_wizard_form" model="ir.ui.view">
    <field name="name">hr.payroll.import.wizard.form</field>
    <field name="model">hr.payroll.import.wizard</field>
    <field name="arch" type="xml">
      <form string="Import Payroll Data">
        <sheet>
          <group>
            <field name="file" filename="filename"/>
            <field name="filename" invisible="1"/>
            <field name="month"/>
            <field name="year"/>
            <field name="import_ref"/>
          </group>
          <footer>
            <button string="Import" type="object" name="action_import" class="btn-primary"/>
            <button string="Cancel" class="btn-secondary" special="cancel"/>
          </footer>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_import_wizard" model="ir.actions.act_window">
    <field name="name">Quick Import</field>
    <field name="res_model">hr.payroll.import.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

  <menuitem id="menu_payroll_quick_import" name="Quick Import" parent="menu_payroll_import_root" action="action_import_wizard"/>
</odoo>