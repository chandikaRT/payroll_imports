<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- FORM VIEW -->
  <record id="view_hr_payroll_import_form" model="ir.ui.view">
    <field name="name">hr.payroll.import.form</field>
    <field name="model">hr.payroll.import</field>
    <field name="arch" type="xml">
      <form string="Payroll Import">
        <header>
          <button name="action_import_excel"
                  string="Import Excel"
                  type="object"
                  class="btn-secondary"
                  invisible="state != 'draft'"/>
          <button name="action_apply_to_payslips"
                  string="Apply to Payslips"
                  type="object"
                  class="btn-primary"
                  invisible="state != 'draft'"/>
          <field name="state" widget="statusbar"/>
        </header>
        <sheet>
          <group>
            <field name="name"/>
            <label for="month" string="Period"/>
            <div class="o_row">
              <field name="month" class="oe_inline"/>
              <span>/</span>
              <field name="year" class="oe_inline" nolabel="1"/>
            </div>
          </group>
          <notebook>
            <page string="Import Lines">
              <field name="line_ids">
                <tree editable="bottom">
                  <field name="employee_id"/>
                  <field name="input_type_id"/>
                  <field name="description"/>
                  <field name="amount" sum="Total Amount"/>
                  <field name="applied" readonly="1"/>
                </tree>
              </field>
            </page>
            <page string="Excel Import" invisible="state != 'draft'">
              <group>
                <field name="import_file" filename="import_filename"/>
                <field name="import_filename" invisible="1"/>
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <!-- TREE VIEW -->
  <record id="view_hr_payroll_import_tree" model="ir.ui.view">
    <field name="name">hr.payroll.import.tree</field>
    <field name="model">hr.payroll.import</field>
    <field name="arch" type="xml">
      <tree string="Payroll Imports">
        <field name="name"/>
        <field name="month"/>
        <field name="year"/>
        <field name="state"/>
      </tree>
    </field>
  </record>

  <!-- ACTION & MENU -->
  <record id="action_hr_payroll_import" model="ir.actions.act_window">
    <field name="name">Payroll Imports</field>
    <field name="res_model">hr.payroll.import</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_payroll_import_root" name="Payroll Imports" parent="hr.menu_hr_root"/>
  <menuitem id="menu_payroll_import" name="Import Sheets" parent="menu_payroll_import_root" action="action_hr_payroll_import"/>
</odoo>